{% comment %} Body {% endcomment %}

body {
    margin: 5%;
    font-family: {{settings.font_body.family}};
    font-weight: {{settings.font_body.weight}};
}

h1, h2, h3, h4, h5, h6 {
    font-family: {{settings.font_heading.family}};
    font-weight: {{settings.font_heading.weight}};
    text-transform: uppercase;

}

h1 {
    letter-spacing: 9px;
    font-size: 43px;
}

h2 {
    letter-spacing: 6.1px;
    font-size: 35px;
}

h3 {
    letter-spacing: 4.1px;
    font-size: 18px;
}

a, button {
    text-decoration: none;
    color: black;
    text-transform: uppercase;
    letter-spacing: 4.1px;
}

p {
    letter-spacing: 2.9px;
}

ul, li {
    list-style-type: none;
}

.featured-collection {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin-bottom: 3%;
    padding: 4% 0%;
    a {
        background-color: white;
        text-align: center;
        text-decoration: none;
        padding: 15px;
        width: 155px;
        box-shadow: 5px 5px {{settings.deep_orange}};
    }
    img {
        height: 40vh;
    }
    h1 {
        text-align: center;
        width: 400px;
        margin-top: -2%;
    }
}

.page-title-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 25vh;
    margin-bottom: 3%;
    padding: 5% 0%;
    background: linear-gradient(90deg, rgba(255,226,207,1) 50%, rgba(251,232,177,1) 50%);
}

#sort-by { 
    display: flex;
    width: 15vw;
    height: 50px;
    padding: 1%;
    background-color: {{settings.golden_yellow}};
    font-family: {{settings.font_body.family}};
    font-size: 20px;
    border: none;
    margin-left: 15px;
}


{% comment %} Nav {% endcomment %}

header {
    margin-bottom: 3%;
}


#link-list {
    display: flex;
}

.Contact {
    margin-left: 78%;
    margin-top: -18px;
}

.cart {
    display: flex;
    margin-left: 88%;
    margin-top: -18px;
    width: 180px;
}

#logo-image {
    display: flex;
    justify-content: center;
    margin-top: -90px;
    img {
        width: 350px;
    }
}

.dropdown {
    position: relative;
    display: inline-block;
}

.dropdown-content {
    display: none;
    position: absolute;
}

.dropdown:hover .dropdown-content {
    display: block;
    background-color: #f9f9f9;
    min-width: 200px;
    {% comment %} box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2); {% endcomment %}
    padding: 10px;
    z-index: 1;
}

{% comment %} Collections {% endcomment %}

.block-collection {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.collection-page {
    display: flex;
}

.collection-list {
    margin-bottom: 3%;
    width: 48%;
    position: relative;
    img{
        width: 100%;
    }
}

.collection-title {
    width: 20vw;
    text-align: center;
}

.learn-button {
    font-family: {{settings.font_button.family}};
    font-weight: {{settings.font_button.weight}};
    border: none;
    background-color: {{settings.golden_yellow}};
    box-shadow: 5px 5px white;
    height: 50px;
    width: 200px;

}

.title-button {
    text-align: center;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}


.collection_product-list {
    display: flex;
    flex-wrap: wrap;
    margin-left: 2%;
    margin-right: 2%;
}

.collection-products {
