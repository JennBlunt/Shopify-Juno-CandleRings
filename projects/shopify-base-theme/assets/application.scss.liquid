    }
}

.update {
        background-color: {{settings.golden_yellow}};
    }

.checkout {
    background-color: {{settings.deep_orange}};
}    


{% comment %} Filter sidebar {% endcomment %}


.color-filter {
    display: flex;
    flex-direction: column;
    border-right: 2px solid {{settings.golden_yellow}};
    width: 40vw;
    height: 55vh;
    h3 {
        margin-left: 2%;
    }
    ul {
        display: flex;
        flex-wrap: wrap;
        width: 15vw;
    }
    li {
        width: 100px;
        text-align: center;
    }
}


.tag-black, .tag-blue, .tag-red, .tag-yellow, .tag-orange, .tag-purple, .tag-pink, .tag-white {
    &::before{
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin: 30%;
        content: "";
        width: 30px;
        height: 30px;
        border-radius: 50%;
    }
    
}

.tag-black {
    &::before{
        background-color: black;
    }
}
.tag-pink {
    &::before{
        background-color: pink;
    }
}

.tag-purple {
    &::before{
        background-color: purple;
    }
}

.tag-red {
    &::before{
        background-color: red;
    }
}

.tag-white {
    &::before{
        background-color: white;
        border-radius: 50%;
        border: 1px solid darkgrey;
    }
}

.tag-yellow {
    &::before{
        background-color: yellow;
    }
}

.tag-blue {
    &::before{
        background-color: blue;
    }
}

.tag-orange {
    &::before{
        background-color: orange;
    }
}

.tag-fall, .tag-pumkin, .tag-spice {
    display: none;


}
